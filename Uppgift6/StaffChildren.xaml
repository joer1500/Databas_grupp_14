<Window x:Class="Uppgift6.StaffChildren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift6"
        mc:Ignorable="d"
        Title="StaffChildren" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView x:Name="listViewSC" HorizontalAlignment="Left" Height="247" VerticalAlignment="Top" Width="631" Margin="139,48,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="90" DisplayMemberBinding="{Binding firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="90" DisplayMemberBinding="{Binding lastname}"/>
                    <!--<GridViewColumn Header="Datum" Width="60" DisplayMemberBinding="{Binding date,StringFormat=yyyy\\-MM\\-dd}"/>-->
                    <GridViewColumn Header="Lämnas" Width="60" DisplayMemberBinding="{Binding should_drop,StringFormat=hh\\:mm}"/>
                    <GridViewColumn Header="Hämtas" Width="60" DisplayMemberBinding="{Binding should_pickup,StringFormat=hh\\:mm}"/>
                    <GridViewColumn Header="Frukost" Width="60" DisplayMemberBinding="{Binding breakfast}"/>
                    <GridViewColumn Header="Går hem med kompis" Width="125" DisplayMemberBinding="{Binding home_with_friend}"/>
                    <GridViewColumn Header="Går hem själv" Width="90" DisplayMemberBinding="{Binding walk_home_alone}"/>
                    <GridViewColumn Header="Section" Width="50" DisplayMemberBinding="{Binding section_id}"/>
                </GridView>
            </ListView.View>

        </ListView>
        <Button x:Name="btnHandleStaff" Content="Hantera personal" HorizontalAlignment="Left" Margin="467,368,0,0" VerticalAlignment="Top" Width="142" Click="btnHandleStaff_Click" Height="37"/>
        <RadioButton x:Name="rbtnSortByLastname" Content="Efternamn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,210,0,0" IsChecked="True" Checked="rbtnSortByLastname_Checked"/>
        <RadioButton x:Name="rbtnSortByFirstname" Content="Förnamn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,230,0,0" Checked="rbtnSortByFirstname_Checked"/>
        <RadioButton x:Name="rbtnSortBySection" Content="Avdelning" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,250,0,0" Checked="rbtnSortBySection_Checked"/>
        <Label x:Name="label" Content="Sortera elevlista:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,183,0,0"/>
        <Button x:Name="btnAddChild" Content="Hantera barn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" Margin="320,368,0,0" Height="37" Click="btnAddChild_Click"/>
        <Button x:Name="btnCloseStaffChildren" Content="Tillbaka" HorizontalAlignment="Left" Margin="31,7,0,0" VerticalAlignment="Top" Width="75" Height="28" BorderBrush="White" Background="White" FontSize="14" Click="btnCloseStaffChildren_Click"/>
        <Image x:Name="arrow_back_png" Margin="17,13,755,389" Source="arrow_back.png" Stretch="Fill" RenderTransformOrigin="1.282,0.515" MouseDown="arrow_back_png_MouseDown_1"/>
        <Button x:Name="btnAddGuardian" Content="Hantera vårdnadshavare" HorizontalAlignment="Left" Margin="614,368,0,0" VerticalAlignment="Top" Width="142" Height="37" Click="btnAddGuardian_Click"/>
        <Label x:Name="label1" Content="Administration" HorizontalAlignment="Left" Height="33" Margin="203,372,0,0" VerticalAlignment="Top" Width="130" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Välj avdelning:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,48,0,0"/>
        <WrapPanel HorizontalAlignment="Left" Height="85" Margin="28,79,0,0" VerticalAlignment="Top" Width="78">
            <RadioButton x:Name="rbtn_all" Margin="0,0,10,0" Content="Alla" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True" Checked="rbtnSortByLastname_Checked"/>
            <RadioButton x:Name="rbtn_blue" Margin="0,0,10,0" Content="Blå" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="rbtnSortByFirstname_Checked"/>
            <RadioButton x:Name="rbtn_yellow" Margin="0,0,10,0" Content="Gul" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="rbtnSortBySection_Checked"/>
            <RadioButton x:Name="rbtn_red" Margin="0,0,10,0" Content="Röd" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="rbtnSortByFirstname_Checked"/>
            <RadioButton x:Name="rbtn_green" Margin="0,0,10,0" Content="Grön" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="rbtnSortBySection_Checked"/>
        </WrapPanel>
        <Label x:Name="label_today" Content="Vald dag" HorizontalAlignment="Left" Margin="252,4,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Width="210"/>
        <Button x:Name="button_plus" Content="Nästa dag" HorizontalAlignment="Left" Margin="452,13,0,0" VerticalAlignment="Top" Width="75" Click="button_plus_Click"/>
        <Button x:Name="button_minus" Content="Föregående dag" HorizontalAlignment="Left" Margin="139,13,0,0" VerticalAlignment="Top" Width="108" Click="button_minus_Click"/>

    </Grid>
</Window>
