<Window x:Class="Uppgift6.NeedBySchoolchild"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift6"
        mc:Ignorable="d"
        Title="Behov" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView x:Name="listViewNeeds" HorizontalAlignment="Left" Height="169" Margin="19,137,0,0" VerticalAlignment="Top" Width="250">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Behov" Width="250" DisplayMemberBinding="{Binding need}" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnCloseNeeds" Content="Tillbaka" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" Width="75" Click="btnCloseNeeds_Click"/>
        <Label x:Name="label_needs" Content="Label" HorizontalAlignment="Left" Height="33" Margin="19,334,0,0" VerticalAlignment="Top" Width="157"/>
    </Grid>
</Window>
