<Window x:Class="Uppgift6.Staffwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift6"
        mc:Ignorable="d"
        Title="Hantera anställda" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="711*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="listViewStaffs" HorizontalAlignment="Left" Height="207" Margin="31,77,0,0" VerticalAlignment="Top" Width="536" SelectionChanged="listViewStaffs_SelectionChanged" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding staffID}"/>
                    <GridViewColumn Header="Förnamn" Width="130" DisplayMemberBinding="{Binding firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="160" DisplayMemberBinding="{Binding lastname}"/>
                    <GridViewColumn Header="Roll" Width="140" DisplayMemberBinding="{Binding profession}"/>
                    <GridViewColumn Header="Avdelning" Width="70" DisplayMemberBinding="{Binding section}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnCloseStaff" Content="Återgå" HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" Width="75" Click="btnCloseStaff_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxID" HorizontalAlignment="Left" Height="23" Margin="33,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33" IsEnabled="False"/>
        <TextBox x:Name="textBoxFirstName" HorizontalAlignment="Left" Height="23" Margin="80,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxLastName" HorizontalAlignment="Left" Height="23" Margin="124.734,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="textBoxProfession" HorizontalAlignment="Left" Height="23" Margin="265.734,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Grid.Column="1"/>
        <Label x:Name="labelID" Content="ID" HorizontalAlignment="Left" Margin="31,330,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelFirstName" Content="Förnamn" HorizontalAlignment="Left" Margin="77,328,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="labelLastName" Content="Efternamn" HorizontalAlignment="Left" Margin="121.734,324,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="labelProfession" Content="Roll" HorizontalAlignment="Left" Margin="252.734,321,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="btnAddStaff" Content="Ny anställd" HorizontalAlignment="Left" Margin="589,263,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="21" Click="btnAddStaff_Click"/>
        <Label x:Name="label" Content="Anställningsregister" HorizontalAlignment="Left" Margin="28,44,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="169" FontWeight="Bold" FontSize="16"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="20" Margin="6,10,0,0" VerticalAlignment="Top" Width="23"/>

    </Grid>
</Window>
